#!/usr/bin/env python
# Usage: examples/logistic_regression examples.db:track_hello
from sys import argv
from itertools import groupby, islice
from operator import itemgetter
from random import Random

import matplotlib
matplotlib.use("pdf")
import matplotlib.pyplot as plt

import twitterology as tw
import twitterology.features as tf


import numpy as np

from sklearn.linear_model import LogisticRegression
from sklearn.metrics import roc_curve, auc
from sklearn.cross_validation import cross_val_score, StratifiedKFold

from tqdm import tqdm


def main():
    users = np.loadtxt("db/users.gz", dtype="string")
    samples = np.loadtxt("db/samples.gz")
    targets = np.loadtxt("db/targets.gz")
    probs = np.ones_like(targets)

    splitter = StratifiedKFold(
        targets, n_folds=10,
        random_state=123, shuffle=True
    )

    clf = LogisticRegression()
    roc_aucs = cross_val_score(
        clf, samples, targets,
        cv=splitter, scoring="roc_auc"
    )
    print roc_aucs, np.average(roc_aucs)

    for train_indices, test_indices in splitter:
        train_samples, train_targets, train_users = samples[train_indices], targets[train_indices], users[train_indices]
        test_samples, test_targets, test_users = samples[test_indices], targets[test_indices], users[test_indices]

        clf.fit(train_samples, train_targets)
        test_probs = clf.predict_proba(test_samples)

        probs[test_indices] = test_probs[:, 1]

    false_positives, true_positives, thresholds = roc_curve(test_targets, test_probs[:, 1])
    roc_auc = auc(false_positives, true_positives)

    plt.figure(figsize=(7, 7))
    plt.plot(false_positives, true_positives, label="AUC: {}".format(roc_auc))
    plt.plot(false_positives, thresholds, label="Threshold")
    plt.legend(loc="lower right")
    plt.grid()
    plt.savefig("roc")

    np.savetxt("db/probs.gz", probs)


if __name__ == "__main__":
    main()
